<h1>Listing epics</h1>

<table>
  <thead>
    <tr>
      <th>Rpt date</th>
      <th>Epic key</th>
      <th>Effort tracking</th>
      <th>Epic name</th>
      <th>Epic component</th>
      <th>Effort original</th>
      <th>Effort remaining</th>
      <th>Effort spent</th>
      <th>Effort changed</th>
      <th>Epic reporter</th>
      <th>Epic type</th>
      <th>Epic assignee</th>
      <th>Epic status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @epics.each do |epic| %>
      <tr>
        <td><%= epic.rpt_date %></td>
        <td><%= epic.epic_key %></td>
        <td><%= epic.effort_tracking %></td>
        <td><%= epic.epic_name %></td>
        <td><%= epic.epic_component %></td>
        <td><%= epic.effort_original %></td>
        <td><%= epic.effort_remaining %></td>
        <td><%= epic.effort_spent %></td>
        <td><%= epic.effort_changed %></td>
        <td><%= epic.epic_reporter %></td>
        <td><%= epic.epic_type %></td>
        <td><%= epic.epic_assignee %></td>
        <td><%= epic.epic_status %></td>
        <td><%= link_to 'Show', epic %></td>
        <td><%= link_to 'Edit', edit_epic_path(epic) %></td>
        <td><%= link_to 'Destroy', epic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

